<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Doctorpatientlist">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="73dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/txtfirstpatient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="All the detais of hospital person"
            android:textSize="30dp"/>


        <Button
            android:id="@+id/doctorlistbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Doctorlist" />


        <Button
            android:id="@+id/patientlistbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text=" Patientlist  " />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>