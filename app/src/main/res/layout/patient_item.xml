<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pname1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="63dp"
            android:layout_marginTop="21dp"
            android:text="Patientname:-"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/Patientage1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="63dp"
            android:layout_marginTop="21dp"
            android:text="PatientAge:-"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/patientemail1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="63dp"
            android:layout_marginTop="21dp"
            android:text="PatientEmail:-"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/Patientpass1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="63dp"
            android:layout_marginTop="21dp"
            android:text="Patientpass"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/pgender1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="63dp"
            android:layout_marginTop="21dp"
            android:text="Gender"
            android:textSize="20dp" />


        <TextView
            android:id="@+id/pwhoisthepatient1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="63dp"
            android:layout_marginTop="21dp"
            android:text="Whoisthepatient:-"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/patientproblem1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="63dp"
            android:layout_marginTop="21dp"
            android:text="what'stheproblem:-"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btndeletepatient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete" />


    </LinearLayout>
</LinearLayout>